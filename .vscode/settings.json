{
  "typescript.tsdk": "node_modules/typescript/lib",
  "debug.node.autoAttach": "on",
  "search.exclude": {
    "**/bower_components": true,
    "**/node_modules": true,
    "node_modules/**": true,
    "dist": true
    // "src/**/*.js": true,
    // "src/**/*.js.map": true
  },
  // "files.exclude": {
  //   "**/.git": true,
  //   "**/.svn": true,
  //   "**/.hg": true,
  //   "**/CVS": true,
  //   "src/**/*.js": false,
  //   "src/**/*.js.map": true
  // },
  "cSpell.words": [
    "objectbuffer",
    "ormconfig",
    "phin",
    "pubsub",
    "typedoc"
  ],
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "jest.autoEnable": false,
  "jest.debugCodeLens.showWhenTestStateIn": [
    "fail",
    "unknown",
    "pass",
    "skip"
  ],
  "jest.enableSnapshotUpdateMessages": true,
  "editor.rulers": [
    80,
    120,
    140
  ]
}
