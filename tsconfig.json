{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
